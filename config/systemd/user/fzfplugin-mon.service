[Unit]
Description="Run fzf install"

[Service]
ExecStartPre=/bin/sleep 3
ExecStart=%h/.local/share/sheldon/repos/github.com/junegunn/fzf/install --bin
ExecStopPost=/usr/bin/ln -sf                                    \
  %h/.local/share/sheldon/repos/github.com/junegunn/fzf/bin/*   \
  %h/.local/bin/
